@model IEnumerable<Entities.Concrete.About>
@{
    ViewBag.Title = "UpdateAboutList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Hakkımda Düzenleme Sayfası</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                </div>
            </div>
            @using (Html.BeginForm("UpdateAbout", "About", FormMethod.Post))
            {
                <div class="card-body">
                    @foreach (var item in Model)
                    {
                        <div class="form-group">
                            <label for="inputName">#</label>
                            <input type="text"   id="inputName" name="AbutId" class="form-control" value="@item.AbutId">
                        </div>
                        <div class="form-group">
                            <label for="inputName">Görsel Yolu 1</label>
                            <input type="text" name="AboutImage1" id="inputName" class="form-control" value="@item.AboutImage1">
                        </div>

                        <div class="form-group">
                            <label for="inputName">Görsel Yolu 2</label>
                            <input type="text" name="AboutImage2" id="inputName" class="form-control" value="@item.AboutImage2">
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Açıklama 1</label>
                            <textarea id="inputDescription" class="form-control" name="AboutContent1" rows="4">@item.AboutContent1</textarea>
                        </div>
                        <div class="form-group">
                            <label for="inputDescription">Açıklama 2</label>
                            <textarea id="inputDescription" class="form-control" name="AboutContent2" rows="4">@item.AboutContent2</textarea>
                        </div>
                    }
                    <button class="btn btn-info">
                        <i class="fas fa-pencil-alt">
                        </i>&nbsp;Güncelle
                    </button>
                </div>
            }
        </div>
    </section>
</body>
</html>


