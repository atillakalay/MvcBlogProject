@model IEnumerable<Entities.Concrete.Category>
@{
    ViewBag.Title = "AdminCategoryList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
        </section>
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Kategoriler</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr>
                            <th style="width: 15%">
                                #
                            </th>
                            <th style="width: 15%">
                                Kategori Adı
                            </th>
                            <th style="width: 15%">
                                Son Blog
                            </th>
                         
                            <th style="width: 15%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>

                                <td>
                                    @item.CategoryId
                                </td>
                                <td>
                                    <a>
                                        @item.CategoryName
                                    </a>
                                    <br />
                                </td>
                                <td>
                                    <ul class="list-inline">
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="../../Templates/AdminLTE-3.0.4/dist/img/avatar.png">
                                        </li>
                                        <li class="list-inline-item">
                                            <img alt="Avatar" class="table-avatar" src="../../Templates/AdminLTE-3.0.4/dist/img/avatar2.png">
                                        </li>
                                    </ul>
                                </td>
                                    
                                <td class="project-state">
                                    <span class="badge badge-success">Success</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/Category/Update/@item.CategoryId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <button class="btn btn-success" data-toggle="modal" data-target="#Modal1">Yeni Kategori Ekle</button>
        <div class="modal" id="#Modal1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h2 class="modal-title">Yeni Kategori Ekleme Paneli</h2>
                    </div>
                    <form method="post" action="/Category/AdminCategoryAdd/">
                        <div class="modal-body">
                            <label>Kategori Adı</label>
                            <input type="text" name="CategoryName" class="form-control" />
                            <br/>
                            <label>Kategori Açıklaması</label>
                            <input type="text" name="CategoryDescription" class="form-control" />
                            <br/>
                            <button class="btn btn-info">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>


