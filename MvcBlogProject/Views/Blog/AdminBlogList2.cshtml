@model IEnumerable<Entities.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList2";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
        </section>
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Bloglar</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                            <tr>
                                <th style="width: 1%">
                                    #
                                </th>
                                <th style="width: 20%">
                                    Blog Başlık
                                </th>
                                <th style="width: 15%">
                                    Yazar
                                </th>
                                <th style="width: 12%">
                                    Beğeni Oranı
                                </th>
                                <th style="width: 8%" class="text-center">
                                    Kategori
                                </th>
                                <th style="width: 20%">
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @item.BlogId
                                    </td>
                                    <td>
                                        <a>
                                            @item.BlogTitle
                                        </a>
                                        <br />
                                    </td>
                                    <td>
                                        <ul class="list-inline">
                                            <li class="list-inline-item">
                                                <img alt="Avatar" class="table-avatar" src="@item.Author.AuthorImage">
                                            </li>
                                            &nbsp;&nbsp;&nbsp;&nbsp;@item.Author.AuthorName
                                        </ul>
                                    </td>
                                    <td class="project_progress">
                                        <div class="progress progress-sm">
                                            <div class="progress-bar bg-green" role="progressbar" aria-volumenow="47" aria-volumemin="0" aria-volumemax="100" style="width: 47%">
                                            </div>
                                        </div>
                                        <small>
                                            47% Complete
                                        </small>
                                    </td>
                                    <td class="project-state">
                                        <span class="badge badge-success">Success</span>
                                    </td>
                                    <td class="project-actions text-right">
                                        <a class="btn btn-primary btn-sm" href="/Blog/BlogDetails/@item.BlogId">
                                            <i class="fas fa-folder">
                                            </i>
                                            Sitede Gör
                                        </a>
                                        <a class="btn btn-info btn-sm" href="/Blog/UpdateBlog/@item.BlogId">
                                            <i class="fas fa-pencil-alt">
                                            </i>
                                            Düzenle
                                        </a>
                                        <a class="btn btn-danger btn-sm" href="/Blog//@item.BlogId">
                                            <i class="fas fa-trash">
                                            </i>
                                            Sil
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
</body>
</html>

