@model IEnumerable<Entities.Concrete.Blog>
@{
    ViewBag.Title = "BlogList";
    Layout = "~/Views/Shared/_AuthorLayout.cshtml";
}

@{ string color = "";}
@{ string stateName = "";}
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <section class="content-header">
        </section>
        <section class="content">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Blog Listem</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table table-striped projects">
                        <thead>
                        <tr>
                            <th style="width: 1%">
                                #
                            </th>
                            <th style="width: 20%">
                                Blog Başlık
                            </th>
                            <th style="width: 20%">
                                Blog Puanı
                            </th>
                            <th style="width: 8%" class="text-center">
                                Durum
                            </th>
                            <th style="width: 20%">
                            </th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.BlogRating>=85)
                            {
                                color = "post-category text-white bg-secondary mb-3";
                                stateName = "Çok İyi";
                            }
                            if (item.BlogRating >= 70 && item.BlogRating <= 84)
                            {
                                color = "post-category text-white bg-info mb-3";
                                stateName = "Başarılı";
                            }
                            if (item.BlogRating >= 50 && item.BlogRating <= 69)
                            {
                                color = "post-category text-white bg-warning mb-3";
                                stateName = "Fena Değil";
                            }
                            if (item.BlogRating >= 0 && item.BlogRating <= 49)
                            {
                                color = "post-category text-white bg-danger mb-3";
                                stateName = "Geliştirilmeli";
                            }
                            <tr>

                                <td>
                                    @item.BlogId
                                </td>
                                <td>
                                    <a>
                                        @item.BlogTitle
                                    </a>
                                    <br />
                                </td>
                                <td class="project_progress">
                                    <div class="progress progress-sm">
                                        <div class="progress-bar bg-green" role="progressbar" aria-volumenow="50" aria-volumemin="0" aria-volumemax="100" style="width: @item.BlogRating%">
                                        </div>
                                    </div>
                                    <small>
                                        Aldığı Puan : @item.BlogRating
                                    </small>
                                </td>
                                <td class="project-state">
                                    <span class="badge @color">@stateName</span>
                                </td>
                                <td class="project-actions text-right">
                                    <a class="btn btn-primary btn-sm" href="#">
                                        <i class="fas fa-folder">
                                        </i>
                                        Yazılar
                                    </a>
                                    <a class="btn btn-info btn-sm" href="/User/UpdateBlog/@item.BlogId">
                                        <i class="fas fa-pencil-alt">
                                        </i>
                                        Düzenle
                                    </a>
                                    <a class="btn btn-danger btn-sm" href="#">
                                        <i class="fas fa-trash">
                                        </i>
                                        Sil
                                    </a>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <a href="/User/AddNewBlog/" class="btn btn-primary">Yeni Blog</a>
    </div>
</body>
</html>




